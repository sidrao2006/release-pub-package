{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 3],
        "no-unused-vars": "warn",
        "new-cap": "off",
        "space-before-function-paren": "off"
    }
}
